@model Broker.Models.Orden


@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Orden</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div  class="form-group">
                <label class="control-label">Usuario</label>
                <select name="UsuarioID" class="form-control">
                    @foreach (var item in ViewBag.Usuarios)
                    {
                        <option value="@item.ID">@item.NombreCompletoConID()</option>
                    }
                </select>
            </div>
            <div class="form-group">
                <label class="control-label">Accion</label>
                <select name="AccionID" class="form-control">
                    @foreach (var item in ViewBag.Acciones)
                    {
                        <option value="@item.Id">@item.EmpresaPrecio()</option>
                    }
                </select>
            </div>
            <div class="form-group">
                <label asp-for="PrecioCompra" class="control-label"></label>
                <input asp-for="PrecioCompra" class="form-control" />
                <span asp-validation-for="PrecioCompra" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Cantidad" class="control-label"></label>
                <input asp-for="Cantidad" class="form-control" />
                <span asp-validation-for="Cantidad" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="EsCompra" /> @Html.DisplayNameFor(model => model.EsCompra)
                </label>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
